{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "warn",
        "noParameterAssign": "error"
      },
      "suspicious": {
        "noVar": "error",
        "noDoubleEquals": "error",
        "noConsole": "warn",
        "noExplicitAny": "warn",
        "noUnsafeNegation": "error",
        "noSelfCompare": "error",
        "noFunctionAssign": "error",
        "noClassAssign": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "noSelfAssign": "error"
      }
    }
  },
  "javascript": {
    "globals": ["geoip2"],
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
